
@model Cliente
@{
    ViewData["Title"] = "CadastroCliente";
}

<form asp-action="CadastroCliente" asp-controller="Home" method="post">
    <main role="main">

        <section class="container" style="margin-top: 50px">
            <div class="row">
                <aside class="col-sm-6">
                    <h3 class="subtitle-doc">
                        # Cadastro
                    </h3>
                    <div id="code_register_1">
                        <div class="card">
                            <header class="card-header">
                                <a asp-action="Login" asp-controller="Home" class="float-right btn btn-outline-primary mt-1">Entrar</a>
                                <h4 class="card-title mt-2">Sign up</h4>
                            </header>
                            <article class="card-body">
                                @if (TempData["MSG_S"] != null)
                                {
                                    <p class="alert alert-success">@TempData["MSG_S"]</p>
                                }
                                <div class="form-row">
                                    <div class="col form-group">
                                        <label asp-for="Nome">Nome</label>
                                        <input type="text" asp-for="Nome" class="form-control" placeholder="">
                                        <span asp-validation-for="Nome"></span>
                                    </div> <!-- form-group end.// -->
                                    <div class="col form-group">
                                        <label asp-for="DataNascimento">Nascimento</label>
                                        <input type="text" asp-for="DataNascimento" class="form-control" placeholder="">
                                        <span asp-validation-for="DataNascimento"></span>
                                    </div> <!-- form-group end.// -->
                                    <div class="form-group">
                                        <label class="form-check form-check-inline">
                                            <input class="form-check-input" type="radio" asp-for="Sexo" value="M">
                                            <span class="form-check-label"> Masculino </span>
                                        </label>
                                        <label class="form-check form-check-inline">
                                            <input class="form-check-input" type="radio" asp-for="Sexo" value="F">
                                            <span class="form-check-label"> Feminino</span>
                                        </label>
                                        <span asp-validation-for="Sexo"></span>
                                    </div> <!-- form-row end.// -->
                                    <div class="form-group">
                                        <label asp-for="CPF">CPF</label>
                                        <input type="text" asp-for="CPF" class="form-control" placeholder="">
                                        <span asp-validation-for="CPF"></span>
                                        <small class="form-text text-muted">  </small>
                                    </div> <!-- form-group end.// -->
                                </div> <!-- form-group end.// -->
                                <div class="form-row">
                                    <div class="form-group col-md-6">
                                        <label asp-for="Telefone">Telefone</label>
                                        <input type="text" asp-for="Telefone" class="form-control">
                                        <span asp-validation-for="Telefone"></span>
                                    </div> <!-- form-group end.// -->
                                </div> <!-- form-row.// -->
                                <div class="form-row">
                                    <div class="form-group col-md-6">
                                        <label asp-for="Email">Email</label>
                                        <input type="email" asp-for="Email" class="form-control">
                                        <span asp-validation-for="Email"></span>
                                    </div> <!-- form-group end.// -->
                                </div> <!-- form-row.// -->
                                <div class="form-group">
                                    <label asp-for="Senha">Senha</label>
                                    <input class="form-control" type="password" asp-for="Senha">
                                    <span asp-validation-for="Senha"></span>
                                </div> <!-- form-group end.// -->
                                <div class="form-group">
                                    <button type="submit" class="btn btn-primary btn-block"> Cadastrar </button>
                                </div> <!-- form-group// -->
                                <small class="text-muted">
                                    By clicking the 'Sign Up' button, you confirm that you
                                    accept our <br> Terms of use and Privacy Policy.
                                </small>
                            </article> <!-- card-body end .// -->
                            <div class="border-top card-body text-center">Já tem uma conta? <a asp-action="Login" asp-controller="Home">Entre</a></div>
                        </div> <!-- card.// -->

                    </div> <!-- code-wrap.// -->
                </aside>
            </div>
        </section>

    </main>
</form>
